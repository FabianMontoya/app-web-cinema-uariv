<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cinema by Fabian Montoya</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/date-picker/css/bootstrap-datepicker.min.css")
    @Styles.Render("~/Content/time-picker/timepicker.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cinema", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Admin Funciones", "Index", "Funcion")</li>
                    <li>@Html.ActionLink("Reservar Función", "Index", "Reservas")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:right;">
            <p>&copy; @DateTime.Now.Year - Made with ❤</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/moment-with-locales.min.js")
    @Scripts.Render("~/Content/date-picker/js/bootstrap-datepicker.min.js")
    @Scripts.Render("~/Content/date-picker/locales/bootstrap-datepicker.es.min.js")
    @Scripts.Render("~/Content/time-picker/timepicker.js")
    @Scripts.Render("~/Scripts/propios.js")
    @RenderSection("scripts", required: false)
</body>
</html>
